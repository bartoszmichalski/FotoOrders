{% extends 'base.html.twig' %}

{% block body %}
    <h1>Shipment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shipment.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ shipment.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ shipment.description }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <ul>
        <li>
            <a href="{{ path('shipment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('shipment_edit', { 'id': shipment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {% endif %}
{% endblock %}
