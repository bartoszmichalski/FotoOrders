{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table class="table table-hover col-md-offset-1">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Last Login</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.lastLogin|date("Y/m/d")  }}</td>
                <td>{% if user.enabled == 1 %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('commission_allByUser_index', { 'userId': user.id }) }}">show commisions</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    
{% endblock %}
